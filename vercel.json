{
  "version": 2,
  "public": true,
  
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  
  "routes": [
     
    {
      "src": "/index",
      "dest": "api/main.py"
    },
    {
      "src": "/search",
      "dest": "api/main.py"
    },
    {
      "src": "/health",
      "dest": "api/main.py"
    },
    
    {
      "src": "/(.*)",
      "dest": "index.html"
    }
  ]
}